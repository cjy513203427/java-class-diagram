{
  "name": "java-class-diagram",
  "displayName": "Java Class Diagram",
  "description": "Generate class diagrams for Java code using PlantUML with enhanced parsing capabilities",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [{
      "id": "java-class-diagram",
      "aliases": ["Java Enhanced (Class Diagram)", "java-class-diagram"],
      "extensions": [".java"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "java-class-diagram",
      "scopeName": "source.java.enhanced",
      "path": "./syntaxes/java-class-diagram.tmLanguage.json"
    }],
    "commands": [
      {
        "command": "javaClassDiagram.generateDiagram",
        "title": "Generate Class Diagram",
        "category": "Java Class Diagram"
      },
      {
        "command": "javaClassDiagram.generateFolderDiagram",
        "title": "Generate Folder Class Diagram",
        "category": "Java Class Diagram"
      },
      {
        "command": "javaClassDiagram.test",
        "title": "Test Extension",
        "category": "Java Class Diagram"
      },
      {
        "command": "javaClassDiagram.testSystemParsing",
        "title": "Test System Class Parsing",
        "category": "Java Class Diagram"
      },
      {
        "command": "javaClassDiagram.testLargeProject",
        "title": "Test Large Project Handling",
        "category": "Java Class Diagram"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "javaClassDiagram.generateDiagram",
          "when": "resourceExtname == .java",
          "group": "javaClassDiagram"
        },
        {
          "command": "javaClassDiagram.generateFolderDiagram",
          "when": "explorerResourceIsFolder",
          "group": "javaClassDiagram"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/node": "^18.x",
    "typescript": "^5.6.2",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0"
  },
  "dependencies": {
    "java-parser": "^2.0.4",
    "plantuml-encoder": "^1.4.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5"
  }
}
